<%= form_for @articulo do |f| %>

    <% if @articulo.errors.any? %>
        <div id="errors">
            <h2>Se han producido los siguientes errores:</h2>
            <ul>
                <% @articulo.errors.full_messages.each do |msg| %>
                    <li><%= msg  %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <%= f.label :titulo %>
    <%= f.text_field :titulo %>

    <%= f.label :contenido %>
    <%= f.text_area :contenido %>

    <%= f.submit "#{@boton} ArtÃ­culo" %>
<% end %>